<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.xuyu.myview.MainActivity">

    <Button
        android:id="@+id/button_automatic_ball"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="自动弹的球"/>
    <Button
        android:id="@+id/button_clock"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="钟表"/>
    <Button
        android:id="@+id/button_identifying_code"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="验证码"/>
    <Button
        android:id="@+id/button_side_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="侧滑"/>
    <Button
        android:id="@+id/button_animator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="动画"/>
    <Button
        android:id="@+id/button_ferris_wheel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="摩天轮"/>
    <Button
        android:id="@+id/button_bezier_curver"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="贝塞尔曲线"/>
    <Button
        android:id="@+id/button_pay_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="支付密码"/>
    <Button
        android:id="@+id/button_bitmap"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="图片"/>
</LinearLayout>
